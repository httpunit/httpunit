<VirtualHost *:80>

	ServerName 127.0.0.1
	DocumentRoot %TRAVIS_BUILD_DIR%/test/application

<Directory %TRAVIS_BUILD_DIR%/test/application>
	Options FollowSymLinks MultiViews ExecCGI
	AllowOverride All
	Order deny,allow
	Allow from all
</Directory>

<IfModule mod_fastcgi.c>
  AddType application/x-httpd-fastphp .php
  Action application/x-httpd-fastphp /php-fcgi
  Alias /php-fcgi /usr/lib/cgi-bin/php
  FastCgiExternalServer /usr/lib/cgi-bin/php -host 127.0.0.1:9000 -pass-header Authorization
</IfModule>

</VirtualHost>
